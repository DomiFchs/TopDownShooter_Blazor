@inherits LayoutComponentBase

<MudThemeProvider @bind-IsDarkMode="IsDarkMode"/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudText Typo="Typo.h5" Class="ml-3">Application</MudText>
        <MudSpacer />
        <MudIconButton Icon="@ThemeIcon" Color="Color.Inherit" Edge="Edge.End" OnClick="ToggleDarkMode" />
    </MudAppBar>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code{

    public bool IsDarkMode { get; set; } = true;
    public string ThemeIcon { get; set; } = Icons.Material.Filled.DarkMode;
    

    public void ToggleDarkMode()
    {
        IsDarkMode = !IsDarkMode;
        ThemeIcon = IsDarkMode ? Icons.Material.Filled.LightMode : Icons.Material.Filled.DarkMode;
    }
}